# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# Ensure no CRLF line-endings, neither on checkout nor on checkin for specified file types.
*.awk           text eol=lf
*.bashrc        text eol=lf
*.bb            text eol=lf
*.bbappend      text eol=lf
*.cfg           text eol=lf
*.conf          text eol=lf
*.diff          text eol=lf
*.gitattributes text eol=lf
*.gitignore     text eol=lf
*.inc           text eol=lf
*.hex                eol=crlf
*.json          text eol=lf
*.md            text eol=lf
*.MIT           text eol=lf
*.mot                eol=crlf
*.network       text eol=lf
*.patch         text eol=lf
*.py            text eol=lf
*.profile       text eol=lf
*.rules         test eol=lf
*.sample        text eol=lf
*.service       text eol=lf
*.sh            text eol=lf
*.sha256        text eol=lf
*.txt           text eol=lf
package_version text eol=lf
SHA256SUMS      text eol=lf
